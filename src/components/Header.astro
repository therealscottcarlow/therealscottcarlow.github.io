<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: all 0.3s ease;
		border-bottom: 1px solid var(--border-color);
	}
	
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--heading-color);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.5rem 0;
	}
	
	.site-title {
		flex: 1;
	}
	
	.internal-links {
		flex: 2;
		display: flex;
		justify-content: center;
		gap: 0.5rem;
	}
	
	.right-section {
		flex: 1;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		gap: 1rem;
	}
	
	nav a {
		padding: 0.5em;
		color: var(--text-color);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: color 0.3s ease;
	}
	
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	
	.social-links {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.5rem;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.3em;
	}
	
	
	@media (max-width: 768px) {
		nav {
			flex-wrap: wrap;
		}
		
		.site-title, .right-section {
			flex: 1;
		}
		
		.internal-links {
			order: 3;
			width: 100%;
			flex: 0 0 100%;
			justify-content: space-around;
			margin-top: 0.5rem;
			margin-bottom: 0.5rem;
		}
		
		.right-section {
			flex-direction: row;
		}
		
		.social-links {
			display: flex;
		}
	}
	
	@media (max-width: 480px) {
		.social-links {
			display: none;
		}
	}
</style>